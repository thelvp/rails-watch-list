<h2>Lists</h2>

<div class="card-list-container row d-flex justify-content-around align-items-start flex-wrap">
  <% @lists.each do |list| %>
    <div class="card-category card-list col-3 my-4">
      <h5> <%= link_to list.name, list %> </h5>
    </div>
  <% end %>
</div>

<div>
  <%= link_to "Home", root_path, class: "btn btn-info" %>
  <%= link_to "Create a list", new_list_path, class: "btn btn-info" %>
</div>
